<section class="container-realTime">
    <h1>Real time products</h1>
    <div class="real-time_list" id="container-realTime">
        {{#each productList}}
        <div class="card" data-id="{{this.id}}">
            <article>
                <img src="{{this.thumbnails}}" alt="{{this.title}}" width="200px">
            </article>
            <div class="card-body">
                <h4>{{this.title}}</h4>
                <p>${{this.price}}</p>
                <button class="delete-product" id="delete-product" data-id="{{this.id}}" >Eliminar</button>
            </div>
        </div>
        {{/each}}
    </div>
</section>

<div class="container-form">
    <h3>Crear Producto</h3>
    <form id="product-form">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" required>

        <label for="description">description</label>
        <input type="text" name="description" id="description" required>

        <label for="price">Price</label>
        <input type="number" name="price" id="price" required>

        <label for="thumbnails">thumbnail</label>
        <input type="text" name="thumbnails" id="thumbnails">

        <label for="code">Code</label>
        <input type="text" name="code" id="code" required>

        <label for="stock">Stock</label>
        <input type="number" name="stock" id="stock" required>

        <label for="category">Category</label>
        <input type="text" name="category" id="category" required>

        <button type="submit">Crear producto</button>
    </form>
</div>

<script src="/socket.io/socket.io.js"></script>
